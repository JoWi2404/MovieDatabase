<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_movie_details_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202020"
    tools:context=".view.fragments.MovieDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fragment_movie_detail_image"
                android:layout_width="119dp"
                android:layout_height="156dp"
                android:layout_marginTop="160dp"
                android:src="@android:drawable/ic_menu_report_image"
                android:translationZ="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.123"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fragment_movie_detail_backdrop"
                android:layout_width="412dp"
                android:layout_height="237dp"
                android:alpha="0.5"
                android:src="@android:drawable/ic_menu_report_image"
                android:translationZ="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_movie_detail_title"
                android:layout_width="216dp"
                android:layout_height="44dp"
                android:layout_marginStart="135dp"
                android:layout_marginTop="160dp"
                android:text="@string/Title"
                android:textColor="#FFC107"
                android:textStyle="bold"
                android:translationZ="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintStart_toStartOf="@+id/fragment_movie_detail_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_movie_detail_date"
                android:layout_width="229dp"
                android:layout_height="19dp"
                android:layout_marginTop="40dp"
                android:text="@string/Subtitle"
                android:textColor="#FFC107"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragment_movie_detail_title"
                app:layout_constraintStart_toStartOf="@+id/fragment_movie_detail_title"
                app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_title" />

            <TextView
                android:id="@+id/fragment_movie_detail_rating"
                android:layout_width="230dp"
                android:layout_height="21dp"
                android:layout_marginTop="4dp"
                android:text="@string/Subtitle"
                android:textColor="#FFC107"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragment_movie_detail_date"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/fragment_movie_detail_date"
                app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_date" />

            <TextView
                android:id="@+id/fragment_movie_detail_description"
                android:layout_width="379dp"
                android:layout_height="142dp"
                android:layout_marginTop="44dp"
                android:maxLines="5"
                android:text="@string/Subtitle"
                android:textColor="#FFC107"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_genre" />

            <TextView
                android:id="@+id/fragment_movie_detail_genre"
                android:layout_width="229dp"
                android:layout_height="21dp"
                android:layout_marginTop="4dp"
                android:text="@string/Subtitle"
                android:textColor="#FFC107"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragment_movie_detail_rating"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/fragment_movie_detail_rating"
                app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_rating" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_logo"
                android:layout_width="374dp"
                android:layout_height="81dp"
                android:layout_marginTop="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.405"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
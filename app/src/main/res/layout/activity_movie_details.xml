<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_movie_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.MovieDetailsActivity">

    <TextView
        android:id="@+id/lbl_movie_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_poster_movie_details"
        android:layout_width="0dp"
        android:layout_height="223dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <TextView
        android:id="@+id/lbl_title_movie_details"
        android:layout_width="394dp"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:text="@string/Title"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_poster_movie_details"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="@+id/img_poster_movie_details"
        app:layout_constraintTop_toBottomOf="@+id/img_poster_movie_details" />

    <TextView
        android:id="@+id/lbl_overview_movie_details"
        android:layout_width="385dp"
        android:layout_height="85dp"
        android:layout_marginTop="12dp"
        android:text="@string/Subtitle"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lbl_title_movie_details"
        app:layout_constraintTop_toBottomOf="@+id/lbl_title_movie_details" />

    <TextView
        android:id="@+id/lbl_release_date_movie_details"
        android:layout_width="117dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="@string/Subtitle"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lbl_overview_movie_details"
        app:layout_constraintTop_toBottomOf="@+id/lbl_overview_movie_details" />

    <TextView
        android:id="@+id/lbl_genre_movie_details"
        android:layout_width="239dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="@string/Subtitle"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/lbl_release_date_movie_details"
        app:layout_constraintTop_toBottomOf="@+id/lbl_overview_movie_details" />

    <TextView
        android:id="@+id/lbl_status_move_details"
        android:layout_width="128dp"
        android:layout_height="37dp"
        android:layout_marginTop="48dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/lbl_release_date_movie_details"
        app:layout_constraintTop_toBottomOf="@+id/lbl_release_date_movie_details" />
</androidx.constraintlayout.widget.ConstraintLayout>